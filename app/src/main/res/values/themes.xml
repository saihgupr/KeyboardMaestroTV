<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.KeyboardMaestroTV" parent="Theme.Leanback">
        <!-- Customize your theme here -->
        <item name="android:colorPrimary">@color/primary_blue</item>
        <item name="android:colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="android:colorAccent">@color/primary_blue</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:colorControlHighlight">@color/focus_color</item>
        <item name="android:colorControlActivated">@color/focus_color</item>
        
        <!-- TV-specific styling -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        
        <!-- Focus styling -->
        <item name="android:selectableItemBackground">@drawable/tv_focus_selector</item>
    </style>
    
    <!-- Card style for script items -->
    <style name="ScriptCardStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/script_card_background</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="ScriptTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="ScriptDescriptionText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <!-- Button styles -->
    <style name="MacOSButton">
        <item name="android:background">@drawable/macos_button_background</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>

    </style>
</resources>
