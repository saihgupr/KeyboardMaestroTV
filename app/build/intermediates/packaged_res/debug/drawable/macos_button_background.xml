<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/macos_light_gray" />
            <corners android:radius="8dp" />
            <stroke android:width="3dp" android:color="@color/primary_blue" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/macos_light_gray" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/primary_blue_dark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/macos_light_gray" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/divider_color" />
        </shape>
    </item>
</selector>
